  "devDependencies": {
    "babel-eslint": "6.1.2",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-typecheck": "3.9.0",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-datetime": "1.4.1",
    "concurrently": "2.2.0",
    "doctoc": "1.2.0",
    "eslint": "2.13.1",
    "eslint-config-airbnb": "9.0.1",
    "eslint-plugin-import": "1.11.0",
    "eslint-plugin-jsx-a11y": "1.5.5",
    "eslint-plugin-react": "5.2.2",
    "eyes": "git://github.com/ptshih/eyes.js.git",
    "mocha": "2.5.3",
    "mocha-mongoose": "1.2.0",
    "nodemon": "1.9.2",
    "react-transform-catch-errors": "1.0.2",
    "redbox-react": "1.2.10",
    "sinon": "1.17.4",
    "sinon-as-promised": "4.0.2",
    "stylelint-config-standard": "11.0.0",
    "webpack-dev-server": "1.14.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "env": {
      "development": {
        "plugins": [
          "typecheck",
          [
            "react-transform",
            {
              "transforms": [
                {
                  "transform": "react-transform-catch-errors",
                  "imports": [
                    "react",
                    "redbox-react"
                  ]
                }
              ]
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "__DEV__": true,
      "debug": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "import/no-unresolved": 1,
      "max-len": 1,
      "arrow-body-style": [
        "warn",
        "as-needed"
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-confusing-arrow": 0,
      "no-unused-vars": 1,
      "react/jsx-quotes": 0,
      "react/prefer-stateless-function": 1,
      "jsx-quotes": [
        2,
        "prefer-double"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
  "scripts": {
    "watch": "DEBUG=ps:* nodemon bin/bootstrap.js",
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 bin/bootstrap.js",
    "clean": "rimraf assets",
    "prebuild": "npm run clean",
    "build": "node bin/build.js",
    "pretest": "npm run eslint",
    "test": "mocha",
    "eslint": "npm run eslint:api && npm run eslint:www",
    "eslint:api": "eslint --ext .js --ignore-path .gitignore api",
    "eslint:www": "eslint --ext .js --ext .jsx --ignore-path .gitignore www",
    "stylelint": "stylelint \"www/**/*.scss\"",
    "docs": "doctoc .",
    "rollback": "heroku rollback -a petershih",
    "purge": "heroku repo:purge_cache -a petershih",
    "heroku-postbuild": "npm run build"
  }
}
